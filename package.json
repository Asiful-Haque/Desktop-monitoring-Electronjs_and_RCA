{
  "name": "screenelectron",
  "version": "1.0.0",
  "description": "Screen capture & upload desktop app",
  "author": "TwinStack Solutions",
  "homepage": "./",
  "main": "main.js",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "electron": "electron .",
    "dev": "cross-env BROWSER=none concurrently \"npm run start\" \"wait-on http://localhost:3000 && npm run electron\"",
    "build": "react-scripts build",
    "dist:win": "npm run build && electron-builder -w",
    "dist:mac": "npm run build && electron-builder -m",
    "dist:linux": "npm run build && electron-builder -l",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "extends": null,
    "appId": "com.twinforce.screenelectron",
    "productName": "TaskPro",
    "asar": true,
    "files": [
      "main.js",
      "preload.js",
      "build/**",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "extraMetadata": {
      "main": "main.js"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icons/iconwin.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "dependencies": {
    "active-win": "^6.3.0",
    "form-data": "^4.0.2",
    "i18next": "^23.16.8",
    "i18next-browser-languagedetector": "^8.2.0",
    "node-fetch": "^2.7.0",
    "ps-list": "^6.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^13.5.0",
    "react-router-dom": "^7.6.0",
    "react-scripts": "^5.0.1",
    "react-select": "^5.10.2",
    "sqlite3": "^5.1.7",
    "web-vitals": "^5.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^10.0.0",
    "electron": "^36.3.1",
    "electron-builder": "^26.0.12",
    "eslint-plugin-react-hooks": "^7.0.1",
    "nodemon": "^3.1.10",
    "wait-on": "^7.0.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
